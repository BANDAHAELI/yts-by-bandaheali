<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bandahealis YouTube VIDEO && NAAT Downloader</title>
    <style>
        /* Neon Rainbow Gradient Background */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(45deg, 
                #ff0099, #ff6600, #ffdd00, #00ffcc, #00aaff, #cc00ff, #ff0099);
            background-size: 400% 400%;
            animation: neonRainbow 10s ease infinite;
            color: #333;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        @keyframes neonRainbow {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .container {
            max-width: 800px;
            margin: 20px;
            padding: 20px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);
        }

        h1 {
            text-align: center;
            color: #007bff;
            margin-bottom: 20px;
            font-size: 2.5rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }

        .search-box {
            text-align: center;
            margin-bottom: 20px;
        }

        .search-box input[type="text"] {
            width: 70%;
            padding: 10px;
            border: 2px solid #007bff;
            border-radius: 5px;
            font-size: 16px;
            background: rgba(255, 255, 255, 0.8);
        }

        .search-box button {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .search-box button:hover {
            background-color: #0056b3;
        }

        .video {
            margin-bottom: 20px;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: rgba(255, 255, 255, 0.9);
        }

        .video img {
            width: 100%;
            max-width: 200px;
            height: auto;
            border-radius: 5px;
        }

        .video h3 {
            margin: 10px 0;
            font-size: 18px;
        }

        .video p {
            margin: 5px 0;
            font-size: 14px;
            color: #555;
        }

        .buttons {
            margin-top: 10px;
        }

        .buttons a {
            margin-right: 10px;
            text-decoration: none;
            color: white;
            background-color: #007bff;
            padding: 8px 15px;
            border-radius: 5px;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }

        .buttons a:hover {
            background-color: #0056b3;
        }

        .buttons a.audio {
            background-color: #28a745;
        }

        .buttons a.audio:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Bandahealis YouTube VIDEO && NAAT Downloader</h1>
        <form action="/search" method="POST" class="search-box">
            <input type="text" name="query" placeholder="Enter YouTube video or NAAT name..." required>
            <button type="submit">Search</button>
        </form>

        <% if (results) { %>
            <h2>Search Results:</h2>
            <% results.forEach(video => { %>
                <div class="video">
                    <img src="<%= video.thumbnail %>" alt="<%= video.title %>">
                    <h3><%= video.title %></h3>
                    <p><strong>Duration:</strong> <%= video.timestamp %></p>
                    <p><strong>Uploaded:</strong> <%= video.ago %></p>
                    <div class="buttons">
                        <a href="<%= video.url %>" target="_blank">Watch Video</a>
                        <a href="/download/video?url=<%= video.url %>">Download Video</a>
                        <a href="/download/audio?url=<%= video.url %>" class="audio">Download Audio</a>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>
</body>
</html>
