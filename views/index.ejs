<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YouTube Search</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .search-box {
            margin-bottom: 20px;
        }
        .video {
            margin-bottom: 15px;
        }
        .video img {
            width: 200px;
            height: auto;
        }
        .buttons {
            margin-top: 10px;
        }
        .buttons a {
            margin-right: 10px;
            text-decoration: none;
            color: white;
            background-color: #007bff;
            padding: 5px 10px;
            border-radius: 5px;
        }
        .buttons a:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <h1>YouTube Search</h1>
    <form action="/search" method="POST" class="search-box">
        <input type="text" name="query" placeholder="Search YouTube..." required>
        <button type="submit">Search</button>
    </form>

    <% if (results) { %>
        <h2>Search Results:</h2>
        <% results.forEach(video => { %>
            <div class="video">
                <img src="<%= video.thumbnail %>" alt="<%= video.title %>">
                <h3><%= video.title %></h3>
                <p><strong>Duration:</strong> <%= video.timestamp %></p>
                <p><strong>Uploaded:</strong> <%= video.ago %></p>
                <div class="buttons">
                    <a href="<%= video.url %>" target="_blank">Watch Video</a>
                    <a href="/download?url=<%= video.url %>">Download Now</a>
                </div>
            </div>
        <% }); %>
    <% } %>
</body>
</html>
